<!DOCTYPE html>
<html>
  <head>
    <title>StayInTouch!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" data-mutate-approach="sync"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.2/css/bulma.min.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar is-info">
  		<div class="navbar-brand">
  		<%= link_to root_path, class: "navbar-item" do %>
  			<h1 class="title has-text-white-light has-text-weight-bold">Stay in touch!</h1>
  		<% end %>
      <%= link_to 'Timeline', posts_path, class: "navbar-item" %>
      <%= link_to 'All users', users_path, class: "navbar-item" %>
			<div class="navbar-burger burger" data-target="navbarExample">
					<span></span>
					<span></span>
					<span></span>
  		</div>
  	 </div>

			<div id="navbarExample" class="navbar-menu">
				<div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped">
              
              <% if user_signed_in? %>
                <p class="control">
                  <%= link_to current_user.name, current_user, class: "button is-link" %>
                </p>
                <p>
                  <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"button" %>
                </p>
              <% else %>
              <p class="control">
                <%= link_to 'Sign In', user_session_path, class: "button is-link" %>
              </p>
              <p class="control">
                <%= link_to 'Sign Up', new_user_registration_path, class: "button is-link" %>
              </p>
              <% end %>

            </div>
					</div>
				</div>
			</div>
  	</nav>

    <% if notice.present? %>
      <div class="notification is-success is-light">
        <button class="delete"></button>
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="notification is-danger is-light">
        <button class="delete"></button>
        <p> <%= alert %> </p>
      </div>
    <% end %>
    <section class="section">
      <div class="container">
        <%= yield %>
      </div>
    </section>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
          $notification = $delete.parentNode;

          $delete.addEventListener('click', () => {
            $notification.parentNode.removeChild($notification);
          });
        });
      });
    </script>
  </body>
</html>
